rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read all collections
    match /{document=**} {
      allow read: if request.auth != null;
    }
    
    // Items collection - authenticated users can write
    match /items/{itemId} {
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Categories collection - authenticated users can write
    match /categories/{catId} {
      allow write: if request.auth != null;
    }
    
    // Transactions collection - authenticated users can write
    match /transactions/{txnId} {
      allow write: if request.auth != null;
    }
    
    // Users can create/update their own profile document
    // AND Admins can create/update ANY profile document
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && (
        request.auth.uid == userId || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      allow delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
